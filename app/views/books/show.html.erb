<%= flash[:notice] %>
<!-- プロフィール 部分テンプレート-->
<div class="body">
	<div class="container">
        <div class="row">
<%= render 'books/list', books: @user %>
<!-- 投稿機能 -->



<h1>Book detail</h1>

<!-- bookの詳細 -->
    <div class="col-xs-9">

	<h1>User</h1>
			 <table class="table table-striped">
			    <thead>
			    	<tr>
			    		<td>
							<%= link_to user_path(@user.id) do %>
							    <%= attachment_image_tag @user, :profile_image, size:"50x50", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %><br><br><br>
							<%= @user.name %>
							<% end %>
		                </td>
		                <td>
						 <%= @book.title %>
						</td>
						<td>
						 <%= @book.body %>
						</td>
		                <td>
						<% if @book.user == current_user %>
						<%= link_to "Edit", edit_book_path(@book.id) %>
						<%= link_to "Destroy", book_path(@book.id), method: :delete %>
						<% end %>
					    </td>
					 </tr>
		        </thead>
		      </table>
    	</div>
 	</div>
</div>

