<div class="body">
<div class="container">
  <div class="row">

<!-- プロフィール 部分テンプレート-->
<%= render 'books/list', books: @user %>





<!-- 投稿一覧 -->
	<div class="col-xs-9">
	<table class="table table-striped">
	    <thead>
			<tr>
				    <th></th>
					<th>Title</th>
					<th>Option</th>

			</tr>
		</thead>
		            <% @books.each do |book| %>
		  <tbody>
		    <tr>
		    	    <td><%= attachment_image_tag book.user, :profile_image, size:"50x50", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
				    <td> <%= link_to book.title,book_path(book.id) %></td>
				    <td> <%= book.body %></td>

			</tr>

	      </tbody>
	                <% end %>
	</table>
  </div>
</div>
</div>
